<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error-text">
    <h2>error!</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<span><%= link_to "Show", book_path(@book.id) %></span>
|
<span class="back"><%= link_to "Back", books_path %></span>